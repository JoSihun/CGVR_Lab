{{>header}}
{{>banner}}
<div class="container-fluid">
    <div class="row mx-4 my-4">
        <!-- 좌측 사이드 메뉴 -->
        <div class="col-xl-2">
            <!-- 연구생 정보 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구생 정보</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><p class="card-text"><strong>이름</strong> : 염동빈</p></div>
                            <div><p class="card-text"><strong>학번</strong> : 2017305045</p></div>
                            <div><p class="card-text"><strong>재학정보</strong> : 4학년</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 게시글 검색 빠른메뉴 -->
            <form method="post">
                <div class="row mb-4">
                    <div class="col-sm-8 mb-2">
                        <input class="form-control border-dark" id="search" type="text" placeholder="게시글 제목입력">
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-dark btn-block" type="submit">검색</button>
                    </div>
                </div>
            </form>

            <!-- 글쓰기 빠른메뉴 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <form class="d-flex" method="GET" action="/laboratory/all/posts/form">
                        <button class="btn btn-dark btn-block" type="submit">글쓰기</button>
                    </form>
                </div>
            </div>

            <!-- 게시판 빠른메뉴 -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구 게시판</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><a class="card-text text-dark" href="/laboratory/all/board"><b>전체 게시판</b></a></div>
                            <div><a class="card-text text-dark" href="/laboratory/notice/board">공지 게시판</a></div>
                            <div><a class="card-text text-dark" href="/laboratory/paper/board">논문 게시판</a></div>
                            <div><a class="card-text text-dark" href="/laboratory/material/board">자료 게시판</a></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        {{#posts}}
        <!-- 우측 게시판 보드 -->
        <div class="col-xl-10">
            <!-- Posts Content -->
            <div class="card shadow mb-4 border border-dark bg-light">
                <!-- Card Header -->
                <div class="card-header bg-dark text-white">
                    <h5 class="m-0"><b>전체 게시판</b></h5>
                </div>

                <!-- Card Body -->
                <div class="card-body text-dark d-flex justify-content-between">
                    <div class="d-inline-block">
                        <h5 class="card-title d-inline-block m-0" style="color: gray">[{{categoryName}}][{{projectName}}]</h5>
                        <h5 class="card-title d-inline-block m-0">{{title}}</h5>
                    </div>
                    <div class="d-inline-block">
                        <div class="text-end"><small style="color: #6c757d">조회수 {{hits}}</small></div>
                        <div class="text-end"><strong style="color: #6c757d">작성자: {{author}}</strong></div>
                        <div class="text-end"><small style="color: #6c757d">작성일 {{createdDate}}</small></div>
                    </div>


                </div>

                <!-- Card Footer -->
                <div class="card-footer text-dark" style="min-height: 500px">
                    <p class="card-text">{{{content}}}</p>
                </div>

                <!-- Card Footer -->
                <div class="card-footer text-dark">
                    <p class="card-text">첨부 파일</p>
                    <!-- 수정 / 삭제 : 권한 있는 사람한테만 보이도록 -->
                    <div class="d-flex justify-content-end">
                        <form class="d-inline-block" method="GET" action="/laboratory/all/posts/update/{{id}}">
                            <button class="btn btn-primary" type="submit" id="btn-update">수정</button>
                        </form>
                        <form class="d-inline-block" method="GET" action="/laboratory/all/posts/delete/{{id}}">
                            <button class="btn btn-danger" type="submit" id="btn-delete">삭제</button>
                        </form>
                    </div>
                </div>

            </div>
            {{/posts}}


