{{>header}}
{{>banner}}
<div class="container-fluid">
    <div class="row mx-4 my-4">
        <!-- 좌측 사이드 메뉴 -->
        <div class="col-xl-2">
            <!-- 연구생 정보 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구생 정보</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><p class="card-text"><strong>이름</strong> : 염동빈</p></div>
                            <div><p class="card-text"><strong>학번</strong> : 2017305045</p></div>
                            <div><p class="card-text"><strong>재학정보</strong> : 4학년</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 게시글 검색 빠른메뉴 -->
            <form method="post">
                <div class="row mb-4">
                    <div class="col-sm-8 mb-2">
                        <input class="form-control border-dark" id="search" type="text" placeholder="게시글 제목입력">
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-dark btn-block" type="submit">검색</button>
                    </div>
                </div>
            </form>

            <!-- 글쓰기 빠른메뉴 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <form class="d-flex" method="post">
                        <button class="btn btn-dark btn-block" type="submit">글쓰기</button>
                    </form>
                </div>
            </div>

            <!-- 게시판 빠른메뉴 -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>공지사항</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><a class="card-text text-dark" href="/notice/all/board"><b>전체 공지사항</b></a></div>
                            <div><a class="card-text text-dark" href="/notice/normal/board">일반 공지사항</a></div>
                            <div><a class="card-text text-dark" href="/notice/lecture/board">수업 공지사항</a></div>
                            <div><a class="card-text text-dark" href="/notice/laboratory/board">연구 공지사항</a></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- 우측 게시판 보드 -->
        <div class="col-xl-10">
            <div class="card border border-dark h-100">
                <!-- Card Header -->
                <div class="card-header bg-dark text-white">
                    <h5 class="m-0"><b>전체 공지사항</b></h5>
                </div>

                <!-- Card Body -->
                <div class="card-body text-dark">
                    <table class="table table-hover table-sm">
                        <thead class="table-dark">
                        <tr>
                            <th style="width: 5%" class="text-center" >번호</th>
                            <th style="width: 50%" class="text-start" >제목</th>
                            <th style="width: 15%" class="text-center" >작성자</th>
                            <th style="width: 15%" class="text-center" >작성일</th>
                            <th style="width: 10%" class="text-center" >조회수</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        <tr> <!-- 여기에 a태그를 넣는다면 더 깔끔하지 않는지 테스트 필요 -->
                            <td class="text-center">132</td>
                            <td class="text-start">이것은 제목입니다.</td>
                            <td class="text-center">2016305072 조시훈</td>
                            <td class="text-center">2022.08.20 21:10</td>
                            <td class="text-center">30</td>
                        </tr>

                        {{#posts}}
                        <tr>
                            <td class="text-center">{{id}}</td>
                            <td class="text-start"><a href="/notice/normal/posts/{{id}}">{{title}}</a></td>
                            <td class="text-center">{{author}}</td>
                            <td class="text-center">{{createDate}}</td>
                            <td class="text-center">{{hits}}</td>
                        </tr>
                        {{/posts}}
                        </tbody>
                    </table>
                </div>

                <div>
                    <nav aria-label="paging">
                        <ul class="pagination pagination-lg justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </div>
        </div>

    </div>
</div>
{{>footer}}