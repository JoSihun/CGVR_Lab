{{>header}}
{{>banner}}
<div class="container-fluid">
    <div class="row mx-4 my-4">

        <!-- 좌측 사이드 메뉴 -->
        <div class="col-xl-2">
            <!-- 연구생 정보 -->
            <div class="row mb-3">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구생 정보</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><p class="card-text"><strong>이름</strong> : 염동빈</p></div>
                            <div><p class="card-text"><strong>학번</strong> : 2017305045</p></div>
                            <div><p class="card-text"><strong>재학정보</strong> : 4학년</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 게시글 검색 빠른메뉴 -->
            <form method="get">
                <div class="row">
                    <div class="col-sm-8 mb-3">
                        <input type="text" class="form-control border-dark" name="searchValue" placeholder="게시글 제목입력">
                    </div>
                    <div class="col-sm-4 mb-3">
                        <input class="btn btn-dark me-4" type="submit" value="검색"/>
                    </div>
                    <input type="hidden" class="form-control" name="searchFilter" value="title"/>
                </div>
            </form>

            <!-- 글쓰기 빠른메뉴 -->
            <div class="row mb-3">
                <div class="col-xl-12">
                    <button class="btn btn-dark btn-block" onclick="location.href='/notice/all/posts/form';">글쓰기</button>
                </div>
            </div>

            <!-- 게시판 빠른메뉴 -->
            <div class="row mb-3 mb-xl-0">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>공지사항</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><a class="card-text text-dark" href="/notice/all/board"><b>전체 공지사항</b></a></div>
                            <div><a class="card-text text-dark" href="/notice/normal/board">일반 공지사항</a></div>
                            <div><a class="card-text text-dark" href="/notice/lecture/board">수업 공지사항</a></div>
                            <div><a class="card-text text-dark" href="/notice/laboratory/board">연구 공지사항</a></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- 우측 게시판 보드 -->
        <div class="col-xl-10">
            <div class="card border border-dark h-100">
                <!-- Card Header -->
                <div class="card-header bg-dark text-white">
                    <h5 class="m-0"><b>전체 공지사항</b></h5>
                </div>

                <!-- Card Body -->
                <div class="card-body text-dark">
                    <table class="table table-hover table-sm">
                        <thead class="table-dark">
                        <tr>
                            <th style="width: 5%" class="text-center" >번호</th>
                            <th style="width: 50%" class="text-start" >제목</th>
                            <th style="width: 15%" class="text-center" >작성자</th>
                            <th style="width: 15%" class="text-center" >작성일</th>
                            <th style="width: 10%" class="text-center" >조회수</th>
                        </tr>
                        </thead>
                        <tbody id="tbody">
                        {{#posts}}
                        <tr>
                            <td class="text-center">{{id}}</td>
                            <td class="text-start">
                                <a class="text-dark" href="/notice/all/posts/{{id}}">
                                    <span style="color: gray">[{{categoryName}}]</span>
                                    {{title}}
                                </a>
                            </td>
                            <td class="text-center">{{author}}</td>
                            <td class="text-center">{{createdDate}}</td>
                            <td class="text-center">{{hits}}</td>
                        </tr>
                        {{/posts}}
                        </tbody>
                    </table>
                </div>

                <!-- 게시글 검색 및 글쓰기, 페이지네이션 -->
                <div class="text-dark"><hr>
                    <div class="row mb-2">
                        <!-- Column 1: Empty Space -->
                        <div class="col-sm-2 text-start">

                        </div>

                        <!-- Column 2: Search Form -->
                        <div class="col-sm-8 text-center">

                            <form method="get">
                                <div class="row align-items-center">
                                    <!-- Sub Column 1: Search Category -->
                                    <div class="col-sm-2 text-end">
                                        <select class="form-select-sm text-start" name="searchFilter">
                                            <option value="title">제목</option>
                                            <option value="content">내용</option>
                                            <option value="author">작성자</option>
                                            <option value="title+content">제목+내용</option>
                                        </select>
                                    </div>
                                    <!-- Sub Column 2: Input Search Keyword -->
                                    <div class="col-sm-8 text-center">
                                        <input type="text" class="form-control border-dark" name="searchValue" placeholder="게시글 제목입력">
                                    </div>
                                    <!-- Sub Column 3: Search Button -->
                                    <div class="col-sm-2 text-start">
                                        <input class="btn btn-dark me-4" type="submit" value="검색"/>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- Column 3: Writing Post Form -->
                        <div class="col-sm-2 text-end">
                            <button class="btn btn-dark me-4" onclick="location.href='/notice/all/posts/form';">글쓰기</button>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <nav class="mb-2" aria-label="Page navigation Sample">
                        <ul class="pagination pagination-sm m-0 justify-content-center">
                            <li class="page-item"><a class="page-link" href="#">첫 페이지</a></li>
                            <li class="page-item disabled"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">4</a></li>
                            <li class="page-item"><a class="page-link" href="#">5</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">끝 페이지</a></li>
                        </ul>
                    </nav>
                </div>

            </div>
        </div>

    </div>
</div>

<style>
    .page-item.active .page-link {
        font-weight: bold;
        background-color: black;
    }

    .page-item.disabled .page-link {
        color: gray;
        background-color: #e6e6e6;
    }
</style>
{{>footer}}