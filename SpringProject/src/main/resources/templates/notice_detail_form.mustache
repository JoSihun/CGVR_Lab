{{>header}}
{{>banner}}
<div class="container-fluid mt-4">
    <div class="row mx-4 my-4">
        <div class="col-xl-2">
            <div class="card shadow mb-4 text-dark bg-light">
                <!-- Card Header -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h5 class="m-0 font-weight-bold">연구생 정보</h5>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div><a class="card-text text-dark">2017305045 염동빈</a></div>
                    <div><a class="card-text text-dark">재학정보 : 4학년</a></div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-8">
                    <input type="text" class="form-control mb-4" id="search" placeholder="게시글 제목입력"/>
                </div>
                <div class="col-xl-4">
                    <a href="#" role="button" class="btn btn-outline-dark btn-block mb-4">검색</a>
                </div>
            </div>

            <div class="row-cols-xl-2">
                <a href="/notice/lecture/save" role="button" class="btn btn-outline-dark btn-block mb-4">글 쓰기</a>
            </div>

            <div class="row-cols-xl">
                <div class="card shadow text-dark bg-light">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold">공지사항</h5>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body" style="align-content: baseline">
                        <div><a class="card-text text-dark" href="/notice/all">전체 공지사항</a></div>
                        <div><a class="card-text text-dark" href="/notice/normal">일반 공지사항</a></div>
                        <div><a class="card-text text-dark" href="/notice/lecture"><b>수업 공지사항</b></a></div>
                        <div><a class="card-text text-dark" href="/notice/laboratory">연구 공지사항</a></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xl-10">
            <div class="card shadow h-100 text-dark bg-light">
                <!-- Card Header -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h5 class="m-0 font-weight-bold">{{category_dto.content}} 공지사항</h5>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <!-- Title -->
                    <div class="mx-4">
                        <h3>{{lecture_notice_dto.title}}</h3>
                    </div>
                    <hr>
                    <!-- Author -->
                    <div class="mx-4 col-xl-4">
                        <b>{{lecture_notice_dto.author}}</b>
                    </div>
                    <!-- RegDate & Hits -->
                    <div class="mx-4 col-xl-4">
                        <span style="color:#6c757d">{{regDate}} 조회 {{lecture_notice_dto.hits}}</span>
                    </div>
                    <!-- Content -->
                    <div class="mx-4 my-4">
                        {{lecture_notice_dto.content}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{>footer}}