{{>header}}

<div class="container-fluid">
    <div class="row mx-4 my-4 justify-content-center">
        <div class="col-lg-8">
            <form method="post">
                <!-- Title -->
                <div class="mx-4 my-4">
                    <label for="subject" class="form-label">제목</label>
                    <input name="subject" class="form-control" type="text" placeholder="제목을 입력하세요">
                </div>

                <!-- Attachment  -->
                <div class="mx-4 my-4">
                    <label class="form-label">첨부파일</label>
                    <input type="file" class="form-control" aria-label="file example" required>
                    <div class="invalid-feedback">Example invalid form file feedback</div>
                </div>

                <!-- Content -->
                <div class="mx-4 my-4">
                    <label for="editordata" class="form-label">내용</label>
                    <textarea id="summernote" name="editordata" class="form-control"></textarea>
                </div>
                <div class="mx-4 my-4 text-end">
                    <input class="btn btn-dark my-2" type="submit" value="저장하기">
                </div>

            </form>

        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $('#summernote').summernote({
            height: 500,
            minHeight: null,
            maxHeight: null,
            focus: true,
            lang: "ko-KR",
            placeholder: '최대 2048자까지 쓸 수 있습니다'
        });
    });
</script>


