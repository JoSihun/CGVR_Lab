{{>header}}
{{>banner}}
<div class="container-fluid mt-4">
    <div class="row mx-4 my-4">
        <div class="col-xl-2">
            <div class="card shadow mb-4 text-dark bg-light">
                <!-- Card Header -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h5 class="m-0 font-weight-bold">연구생 정보</h5>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div><a class="card-text text-dark">2017305045 염동빈</a></div>
                    <div><a class="card-text text-dark">재학정보 : 4학년</a></div>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-8">
                    <input type="text" class="form-control mb-4" id="search" placeholder="게시글 제목입력"/>
                </div>
                <div class="col-xl-4">
                    <a href="#" role="button" class="btn btn-outline-dark btn-block mb-4">검색</a>
                </div>
            </div>

            <div class="row-cols-xl-2">
                <a href="notice_post_form" role="button" class="btn btn-outline-dark btn-block mb-4">글 쓰기</a>
            </div>

            <div class="row-cols-xl">
                <div class="card shadow text-dark bg-light">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h5 class="m-0 font-weight-bold">공지사항</h5>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body" style="align-content: baseline">
                        <div><a class="card-text text-dark" href="/notice/all"><b>전체 공지사항</b></a></div>
                        <div><a class="card-text text-dark" href="/notice/normal">일반 공지사항</a></div>
                        <div><a class="card-text text-dark" href="/notice/lect">수업 공지사항</a></div>
                        <div><a class="card-text text-dark" href="/notice/lab">연구 공지사항</a></div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xl-10">
            <div class="card shadow h-100 text-dark bg-light">
                <!-- Card Header -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h5 class="m-0 font-weight-bold">전체 공지사항</h5>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <form method="post" action="/notice/save">
                        <!-- Category -->
                        <div class="mx-4 my-4">
                            <label for="category1_id" class="form-label">카테고리</label>
                            <select class="form-control" name="category1_id">
                                <option value="1">일반 공지사항</option>
                                <option value="2">수업 공지사항</option>
                                <option value="3">연구 공지사항</option>
                            </select>
                        </div>
                        <!-- Title -->
                        <div class="mx-4 my-4">
                            <label for="title" class="form-label">제목</label>
                            <input name="title" class="form-control" type="text" placeholder="제목을 입력하세요">
                        </div>

                        <!-- Attachment  -->
                        <div class="mx-4 my-4">
                            <label class="form-label">첨부파일</label>
                            <!--                            <input type="file" class="form-control" aria-label="file example" required>-->
                            <input type="file" class="form-control" aria-label="file example">
                            <div class="invalid-feedback">Example invalid form file feedback</div>
                        </div>

                        <!-- Content -->
                        <div class="mx-4 my-4">
                            <label for="content" class="form-label">내용</label>
                            <textarea id="summernote" name="content" class="form-control"></textarea>
                        </div>

                        <!-- Hidden Params -->
                        <input type="hidden" class="form-control" name="author" value="히든작성자"/>
                        <input type="hidden" class="form-control" name="hits" value="1"/>


                        <div class="mx-4 my-4 text-end">
                            <input class="btn btn-dark my-2" type="submit" value="저장하기">
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function() {
        $('#summernote').summernote({
            height: 500,
            minHeight: null,
            maxHeight: null,
            focus: true,
            lang: "ko-KR",
            placeholder: '내용을 입력하세요'
        });
    });
</script>


