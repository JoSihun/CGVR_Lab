laboratory_material_posts_form.mustache{{>header}}
{{>banner}}
<div class="container-fluid">
    <div class="row mx-4 my-4">

        <!-- 좌측 사이드 메뉴 -->
        <div class="col-xl-2">
            <!-- 연구생 정보 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구생 정보</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><p class="card-text"><strong>이름</strong> : 염동빈</p></div>
                            <div><p class="card-text"><strong>학번</strong> : 2017305045</p></div>
                            <div><p class="card-text"><strong>재학정보</strong> : 4학년</p></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 게시글 검색 빠른메뉴 -->
            <form method="post">
                <div class="row mb-4">
                    <div class="col-sm-8 mb-2">
                        <input class="form-control border-dark" id="search" type="text" placeholder="게시글 제목입력">
                    </div>
                    <div class="col-sm-4">
                        <button class="btn btn-dark btn-block" type="submit">검색</button>
                    </div>
                </div>
            </form>

            <!-- 글쓰기 빠른메뉴 -->
            <div class="row mb-4">
                <div class="col-xl-12">
                    <form class="d-flex" method="GET" action="/laboratory/all/posts/form">
                        <button class="btn btn-dark btn-block" type="submit">글쓰기</button>
                    </form>
                </div>
            </div>

            <!-- 게시판 빠른메뉴 -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card border border-dark">
                        <!-- Card Header -->
                        <div class="card-header bg-dark text-white">
                            <h5 class="m-0"><b>연구 게시판</b></h5>
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-dark">
                            <div><a class="card-text text-dark" href="/laboratory/all/board"><b>전체 게시판</b></a></div>
                            <div><a class="card-text text-dark" href="/laboratory/notice/board">공지 게시판</a></div>
                            <div><a class="card-text text-dark" href="/laboratory/paper/board">논문 게시판</a></div>
                            <div><a class="card-text text-dark" href="/laboratory/material/board">자료 게시판</a></div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- 우측 게시판 보드 -->
        <div class="col-xl-10">
            <div class="card border border-dark h-100">
                <!-- Card Header -->
                <div class="card-header bg-dark text-white">
                    <h5 class="m-0"><b>전체 게시판</b></h5>
                </div>

                <!-- Card Body -->
                <div class="card-body text-dark">
                    <form method="post">
                        <!-- Category -->
                        <div class="mx-4 mb-2 d-flex">
                            <!-- CategoryName -->
                            <div class="d-inline-block w-50">
                                <select class="form-control" name="categoryName" id="category">
                                    <option value="공지">게시판을 선택하세요</option>
                                    <option value="공지">공지 게시판</option>
                                    <option value="논문">논문 게시판</option>
                                    <option value="자료">자료 게시판</option>
                                </select>
                            </div>
                            <!-- ProjectName -->
                            <div class="d-inline-block w-50">
                                <select class="form-control" name="projectName" id="project">
                                    <option value="프로젝트1">프로젝트를 선택하세요</option>
                                    <option value="프로젝트1">프로젝트1</option>
                                    <option value="프로젝트2">프로젝트2</option>
                                    <option value="프로젝트3">프로젝트3</option>
                                </select>
                            </div>
                        </div>

                        <!-- Title -->
                        <div class="mx-4 mb-2">
                            <input name="title" class="form-control" type="text" placeholder="제목을 입력하세요">
                        </div>

                        <!-- Content -->
                        <div class="mx-4 mb-2">
                            <textarea id="summernote" name="content" class="form-control"></textarea>
                        </div>

                        <!-- Attachment  -->
                        <div class="mx-4 mb-2">
                            <input type="file" class="form-control" aria-label="file example">
                            <div class="invalid-feedback">Example invalid form file feedback</div>
                        </div>

                        <!-- Temporal Hidden Params -->
                        <input type="hidden" class="form-control" name="attachment_id" value="1"/>
                        <input type="hidden" class="form-control" name="author" value="히든작성자"/>

                        <div class="mx-4 mb-4 text-end">
                            <input id="btn-save" class="btn btn-dark" type="submit" value="저장하기">
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>
</div>


<script>
    $(document).ready(function() {
        $('#summernote').summernote({
            height: 500,
            minHeight: null,
            maxHeight: null,
            focus: true,
            lang: "ko-KR",
            placeholder: '내용을 입력하세요'
        });
    });
</script>
{{>footer}}